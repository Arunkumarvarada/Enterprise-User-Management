	<bean id="userManagementBootUpConfigurationBean"
		class="com.altiux.eum.esystem.dao.UserManagementBootUpConfiguration" autowire="byType" />

	<bean id="applicationConfigInitializerBean"
		class="com.altiux.eum.esystem.dao.ApplicationConfigInitializer"	autowire="byType" />

	<bean id="serverConfigBean"
		class="com.altiux.eum.esystem.dto.ApplicationConfigDTO">
		<property name="appName" value="${appName}" />
		<property name="id" value="${appID}" />
		<property name="ip" value="${appIP}" />
		<property name="port" value="${appPort}" />
	</bean> 

	<bean id="loginDAO"
