	<bean id="enterpriseSystemDAOBean"
		class="com.altiux.eum.esystem.dao.impl.EnterpriseSystemDAOImpl" autowire="byType" />

	<bean id="configDAO" class="com.altiux.eum.esystem.dao.impl.ConfigDAOImpl"
